{
  "description": "pathogen.vim: Manage Vim plugins with ease!",
  "prefetch": [
    {
      "kind": "git clone",
      "remote": "http://github.com/tpope/vim-pathogen"
    }
  ],
  "install": [
    {
      "kind": "make folders",
      "folders": [
        "$HOME/.vim/autoload",
        "$HOME/.vim/bundle",
        "$HOME/.vim/config"
      ]
    },
    {
      "kind": "copy",
      "file": "$PREFETCH_DIR/vim-pathogen/autoload/pathogen.vim",
      "to": "$HOME/.vim/autoload/pathogen.vim"
    },
    {
      "kind": "copy",
      "file": "config.vim",
      "to": "$HOME/.vim/config/pathogen.vim"
    },
    {
      "kind": "append text",
      "text": "source ~/.vim/config/pathogen.vim",
      "to": "$HOME/.vim/init.vim"
    }
  ]
}
