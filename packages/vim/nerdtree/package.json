{
  "description": "File system tree plugin for Vim",
  "dependencies": [
    "vim.pathogen"
  ],
  "prefetch": [
    {
      "kind": "git clone",
      "remote": "http://github.com/scrooloose/nerdtree"
    }
  ],
  "install": [
    {
      "kind": "copy tree",
      "folder": "$PREFETCH_DIR/nerdtree",
      "to": "$HOME/.vim/bundle/nerdtree"
    },
    {
      "kind": "copy",
      "file": "config.vim",
      "to": "$HOME/.vim/config/nerdtree.vim"
    },
    {
      "kind": "append text",
      "text": "source ~/.vim/config/nerdtree.vim",
      "to": "$HOME/.vim/init.vim"
    }
  ]
}
