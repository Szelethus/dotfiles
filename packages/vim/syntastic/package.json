{
  "description": "Vim syntax checking extension",
  "dependencies": [
    "vim.pathogen"
  ],
  "prefetch": [
    {
      "kind": "git clone",
      "remote": "http://github.com/scrooloose/syntastic"
    }
  ],
  "install": [
    {
      "kind": "copy tree",
      "folder": "$PREFETCH_DIR/syntastic",
      "to": "$HOME/.vim/bundle/syntastic"
    },
    {
      "kind": "copy",
      "file": "config.vim",
      "to": "$HOME/.vim/config/syntastic.vim"
    },
    {
      "kind": "append text",
      "text": "source ~/.vim/config/syntastic.vim",
      "to": "$HOME/.vim/init.vim"
    }
  ]
}
