{
  "description": "The ultimate undo history visualizer for Vim",
  "dependencies": [
    "vim.pathogen"
  ],
  "prefetch": [
    {
      "kind": "git clone",
      "remote": "http://github.com/mbbill/undotree"
    }
  ],
  "install": [
    {
      "kind": "copy tree",
      "folder": "$PREFETCH_DIR/undotree",
      "to": "$HOME/.vim/bundle/undotree"
    },
    {
      "kind": "copy",
      "file": "config.vim",
      "to": "$HOME/.vim/config/undotree.vim"
    },
    {
      "kind": "append text",
      "text": "source ~/.vim/config/undotree.vim",
      "to": "$HOME/.vim/init.vim"
    }
  ]
}
