{
  "description": "Basic user environment files. (This package is initially tailored for use on a default Ubuntu 16.04 user account.)",
  "install": [
    {
      "kind": "extract multiple",
      "root": "HOME",
      "files": [
        ".profile",
        ".bashrc",
        ".bash_aliases",
        ".gitconfig"
      ]
    },
    {
      "kind": "make folders",
      "folders": [ "$HOME/.config/htop" ]
    },
    {
      "kind": "extract multiple",
      "root": "HOME",
      "files": [ ".config/htop/htoprc" ]
    }
  ]
}
